@page "/properties"
@inject PropertyService PropertyService
@rendermode InteractiveServer

<PageTitle>Properties</PageTitle>

<h1>Properties</h1>

<button class="btn btn-primary" @onclick="ShowAddPropertyDialog">Add Property</button>
<button class="btn btn-primary" @onclick="ShowSearchPropertyDialog">Search with GPS</button>

@if (_propertiesToShow.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    @if (_propertiesToShow == null)
    {
        <p><em>No parcels to display</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Inventory number</th>
                    <th>Property description</th>
                    <th>GPS1 width</th>
                    <th>GPS1 width position</th>
                    <th>GPS1 length</th>
                    <th>GPS2 length position</th>
                    <th>GPS2 width</th>
                    <th>GPS2 width position</th>
                    <th>GPS2 length</th>
                    <th>GPS2 length position</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in _propertiesToShow)
                {
                    <tr>
                        <td>@property.InventNo</td>
                        <td>@property.PropDesc</td>
                        <td>@property.GpsPosHandler.GpsPositioons[0].Width</td>
                        <td>@property.GpsPosHandler.GpsPositioons[0].WidthPosition</td>
                        <td>@property.GpsPosHandler.GpsPositioons[0].Length</td>
                        <td>@property.GpsPosHandler.GpsPositioons[0].LengthPosition</td>
                        <td>@property.GpsPosHandler.GpsPositioons[1].Width</td>
                        <td>@property.GpsPosHandler.GpsPositioons[1].WidthPosition</td>
                        <td>@property.GpsPosHandler.GpsPositioons[1].Length</td>
                        <td>@property.GpsPosHandler.GpsPositioons[1].LengthPosition</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
@if (isAddDialogVisible)
{
    <div class="modal fade show" tabindex="-1" role="dialog" style="display:block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Property</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddPropertyDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="inventNo" class="form-label">Inventory number</label>
                        <input type="text" class="form-control" id="inventNo" @bind="_inventNo" />
                    </div>
                    <div class="mb-3">
                        <label for="propDesc" class="form-label">Property description</label>
                        <input type="text" class="form-control" id="propDesc" @bind="_propDesc" />
                    </div>
                    <div class="mb-3">
                        <label for="gps1Width" class="form-label">GPS1 width</label>
                        <input type="text" class="form-control" id="gps1Width" @bind="_gps1Width" maxlength="1" />
                    </div>
                    <div class="mb-3">
                        <label for="gps1WidthPosition" class="form-label">GPS1 width position</label>
                        <input type="number" class="form-control" id="gps1WidthPosition" @bind="_gps1WidthPosition" />
                    </div>
                    <div class="mb-3">
                        <label for="gps1Length" class="form-label">GPS1 length</label>
                        <input type="text" class="form-control" id="gps1Length" @bind="_gps1Length" maxlength="1" />
                    </div>
                    <div class="mb-3">
                        <label for="gps1LengthPosition" class="form-label">GPS1 length position</label>
                        <input type="number" class="form-control" id="gps1LengthPosition" @bind="_gps1LengthPosition" />
                    </div>
                    <div class="mb-3">
                        <label for="gps2Width" class="form-label">GPS2 width</label>
                        <input type="text" class="form-control" id="gps2Width" @bind="_gps2Width" maxlength="1" />
                    </div>
                    <div class="mb-3">
                        <label for="gps2WidthPosition" class="form-label">GPS2 width position</label>
                        <input type="number" class="form-control" id="gps2WidthPosition" @bind="_gps2WidthPosition" />
                    </div>
                    <div class="mb-3">
                        <label for="gps2Length" class="form-label">GPS2 length</label>
                        <input type="text" class="form-control" id="gps2Length" @bind="_gps2Length" maxlength="1" />
                    </div>
                    <div class="mb-3">
                        <label for="gps2LengthPosition" class="form-label">GPS2 length position</label>
                        <input type="number" class="form-control" id="gps2LengthPosition" @bind="_gps2LengthPosition" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddPropertyDialog">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="AddProperty">Add</button>
                </div>
            </div>
        </div>
    </div>
}

@if (isSearchDialogVisible)
{
    <div class="modal fade show" tabindex="-1" role="dialog" style="display:block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Property</h5>
                    <button type="button" class="btn-close" @onclick="CloseSearchPropertyDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="gpsWToSearch" class="form-label">GPS width position</label>
                        <input type="number" class="form-control" id="gpsWToSearch" @bind="_gpsWToSearch" />
                    </div>
                    <div class="mb-3">
                        <label for="gpsLToSearch" class="form-label">GPS length position</label>
                        <input type="number" class="form-control" id="gpsLToSearch" @bind="_gpsLToSearch" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseSearchPropertyDialog">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SearchProperty">Search</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Property> _propertiesToShow = new List<Property>(); 
    private bool isAddDialogVisible = false;
    private bool isSearchDialogVisible = false;
    private int _inventNo;
    private string? _propDesc;
    private char _gps1Width, _gps1Length;
    private char _gps2Width, _gps2Length;
    private double _gpsWToSearch, _gpsLToSearch;
    private double _gps1WidthPosition, _gps1LengthPosition;
    private double _gps2WidthPosition, _gps2LengthPosition;

    void ShowAddPropertyDialog()
    {
        isAddDialogVisible = true;
        StateHasChanged();
    }

    void CloseAddPropertyDialog()
    {
        isAddDialogVisible = false;
        _inventNo = 0;
        _propDesc = ""; 
        _gps1Width = '-';
        _gps1WidthPosition = 0.0;
        _gps1Length = '-';
        _gps1LengthPosition = 0.0;
        _gps2Width = '-';
        _gps2WidthPosition = 0.0;
        _gps2Length = '-';
        _gps2LengthPosition = 0.0;
        StateHasChanged();
    }

    void AddProperty()
    {
        Property newProperty = new Property(_inventNo, _propDesc, _gps1Width, _gps1WidthPosition, _gps1Length, _gps1LengthPosition, _gps2Width, _gps2WidthPosition, _gps2Length, _gps2LengthPosition);
        PropertyService.AddProperty(newProperty);
        isAddDialogVisible = false;
        _inventNo = 0;
        _propDesc = ""; 
        _gps1Width = '-';
        _gps1WidthPosition = 0.0;
        _gps1Length = '-';
        _gps1LengthPosition = 0.0;
        _gps2Width = '-';
        _gps2WidthPosition = 0.0;
        _gps2Length = '-';
        _gps2LengthPosition = 0.0;
        StateHasChanged();
    }

    void ShowSearchPropertyDialog()
    {
        isSearchDialogVisible = true;
        StateHasChanged();
    }

     void CloseSearchPropertyDialog()
    {
        isSearchDialogVisible = false;
        _gpsWToSearch = 0.0;
        _gpsLToSearch = 0.0;
        StateHasChanged();
    }

    void SearchProperty() {
        _propertiesToShow = PropertyService.SearchProperties(_gpsWToSearch, _gpsLToSearch);
        isSearchDialogVisible = false;
        _gpsWToSearch = 0.0;
        _gpsLToSearch = 0.0;
        StateHasChanged();
    }
}
