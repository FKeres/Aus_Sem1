@page "/"
@inject ParcelService ParcelService
@inject PropertyService PropertyService
@rendermode InteractiveServer

<PageTitle>All</PageTitle>

<h1>All</h1>

<button class="btn btn-primary" @onclick="ShowSearchAllDialog">Search with GPS</button>

@if ((_parcelsToShow1 == null && _propertiesToShow1 == null && _parcelsToShow2 == null && _propertiesToShow2 == null) || (_parcelsToShow1.Count == 0 && _propertiesToShow1.Count == 0 && _parcelsToShow2.Count == 0 && _propertiesToShow2.Count == 0))
{
    <p><em>Loading...</em></p>
}
else
{
    @if (_parcelsToShow1 == null && _propertiesToShow1 == null && _parcelsToShow2 == null && _propertiesToShow2 == null)
    {
        <p><em>No teritorial units to display</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>TU Identification number</th>
                    <th>TU description</th>
                    <th>GPS1 width</th>
                    <th>GPS1 width position</th>
                    <th>GPS1 length</th>
                    <th>GPS2 length position</th>
                    <th>GPS2 width</th>
                    <th>GPS2 width position</th>
                    <th>GPS2 length</th>
                    <th>GPS2 length position</th>
                </tr>
            </thead>
            <tbody>
                @if (_parcelsToShow1 != null) 
                {
                    @foreach (var parcel in _parcelsToShow1)
                    {
                        <tr>
                            <td>@parcel.ParcNo</td>
                            <td>@parcel.ParcDesc</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[0].Width</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[0].WidthPosition</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[0].Length</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[0].LengthPosition</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[1].Width</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[1].WidthPosition</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[1].Length</td>
                            <td>@parcel.GpsPosHandler.GpsPositioons[1].LengthPosition</td>
                        </tr>
                    }
                }
                @if (_parcelsToShow2 != null) 
                {
                    @foreach (var parcel2 in _parcelsToShow2)
                    {
                        <tr>
                            <td>@parcel2.ParcNo</td>
                            <td>@parcel2.ParcDesc</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[0].Width</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[0].WidthPosition</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[0].Length</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[0].LengthPosition</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[1].Width</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[1].WidthPosition</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[1].Length</td>
                            <td>@parcel2.GpsPosHandler.GpsPositioons[1].LengthPosition</td>
                        </tr>
                    }
                }
                @if (_propertiesToShow1 != null) 
                {
                    @foreach (var property in _propertiesToShow1)
                    {
                        <tr>
                            <td>@property.InventNo</td>
                            <td>@property.PropDesc</td>
                            <td>@property.GpsPosHandler.GpsPositioons[0].Width</td>
                            <td>@property.GpsPosHandler.GpsPositioons[0].WidthPosition</td>
                            <td>@property.GpsPosHandler.GpsPositioons[0].Length</td>
                            <td>@property.GpsPosHandler.GpsPositioons[0].LengthPosition</td>
                            <td>@property.GpsPosHandler.GpsPositioons[1].Width</td>
                            <td>@property.GpsPosHandler.GpsPositioons[1].WidthPosition</td>
                            <td>@property.GpsPosHandler.GpsPositioons[1].Length</td>
                            <td>@property.GpsPosHandler.GpsPositioons[1].LengthPosition</td>
                        </tr>
                    }
                }
                @if (_propertiesToShow2 != null) 
                {
                    @foreach (var property2 in _propertiesToShow2)
                    {
                        <tr>
                            <td>@property2.InventNo</td>
                            <td>@property2.PropDesc</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[0].Width</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[0].WidthPosition</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[0].Length</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[0].LengthPosition</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[1].Width</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[1].WidthPosition</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[1].Length</td>
                            <td>@property2.GpsPosHandler.GpsPositioons[1].LengthPosition</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}
@if (isSearchDialogVisible)
{
    <div class="modal fade show" tabindex="-1" role="dialog" style="display:block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Parcel</h5>
                    <button type="button" class="btn-close" @onclick="CloseSearchAllDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="gpsWToSearch1" class="form-label">GPS1 width position</label>
                        <input type="number" class="form-control" id="gpsWToSearch1" @bind="_gpsWToSearch1" />
                    </div>
                    <div class="mb-3">
                        <label for="gpsLToSearch1" class="form-label">GPS1 length position</label>
                        <input type="number" class="form-control" id="gpsLToSearch1" @bind="_gpsLToSearch1" />
                    </div>
                    <div class="mb-3">
                        <label for="gpsWToSearch2" class="form-label">GPS2 width position</label>
                        <input type="number" class="form-control" id="gpsWToSearch2" @bind="_gpsWToSearch2" />
                    </div>
                    <div class="mb-3">
                        <label for="gpsLToSearch2" class="form-label">GPS2 length position</label>
                        <input type="number" class="form-control" id="gpsLToSearch2" @bind="_gpsLToSearch2" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseSearchAllDialog">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SearchAll">Search</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Parcel> _parcelsToShow1 = new List<Parcel>(); 
    private List<Parcel> _parcelsToShow2 = new List<Parcel>(); 
    private List<Property> _propertiesToShow1 = new List<Property>(); 
    private List<Property> _propertiesToShow2 = new List<Property>();
    private double _gpsWToSearch1, _gpsLToSearch1, _gpsWToSearch2, _gpsLToSearch2;
    private bool isSearchDialogVisible = false;

    void ShowSearchParcelDialog()
    {
        isSearchDialogVisible = true;
        StateHasChanged();
    }


    void SearchAll() {
        _parcelsToShow1 = ParcelService.SearchParcels(_gpsWToSearch1, _gpsLToSearch1);
        _parcelsToShow2 = ParcelService.SearchParcels(_gpsWToSearch2, _gpsLToSearch2);
        _propertiesToShow1 = PropertyService.SearchProperties(_gpsWToSearch1, _gpsLToSearch1);
        _propertiesToShow2 = PropertyService.SearchProperties(_gpsWToSearch2, _gpsLToSearch2);
        isSearchDialogVisible = false;
        _gpsWToSearch1 = 0.0;
        _gpsLToSearch1 = 0.0;
        _gpsWToSearch2 = 0.0;
        _gpsLToSearch2 = 0.0;
        StateHasChanged();
    }

    void ShowSearchAllDialog()
    {
        isSearchDialogVisible = true;
        StateHasChanged();
    }

     void CloseSearchAllDialog()
    {
        isSearchDialogVisible = false;
        _gpsWToSearch1 = 0.0;
        _gpsLToSearch1 = 0.0;
        _gpsWToSearch2 = 0.0;
        _gpsLToSearch2 = 0.0;
        StateHasChanged();
    }
}
